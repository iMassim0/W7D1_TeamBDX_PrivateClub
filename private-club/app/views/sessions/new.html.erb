<div class="container ">
  <div class="box">
        <h1>Sign in</h1>

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_for(:session, url: {action: "create"}) do |f| %>
              <%= f.label :id %>
              <%= f.text_field :id, class: 'form-control' %>
              <br>
              <%= f.submit "Log in now !", class: "btn btn-primary" %>
              <%= link_to "No register yet ?", signup_path, class: "btn btn-secondary" %>
            <% end %>
          </div>
        </div>
</div>
</div>
