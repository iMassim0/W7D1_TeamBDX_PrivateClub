<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Firstname</th>
        <th scope="col">Lastname</th>
        <th scope="col">Email</th>
        <th scope="col">Valid?</th>
        <th scope="col">Link to profile</th>
        <th scope="col">Manage?</th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td><%= user.email %></td>
          <td><%= user.valid? %></td>
          <td><%= link_to  "#{user.firstname}'s profile", profile_path(user), class: "btn btn-outline-dark" %></td>
          <% if owner(user) %>
            <td><%= link_to 'Update', edit_user_path(user), class: "btn btn-outline-warning"%></td>
            <td><%= link_to 'Delete', user, class: 'btn btn-outline-danger',
                                      method: :delete,
                 data: { confirm: 'Sur ?' } %></td>
          <% else %>
          <td><p class="badge badge-danger ">You don't have permission</p></td>
          <td></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
